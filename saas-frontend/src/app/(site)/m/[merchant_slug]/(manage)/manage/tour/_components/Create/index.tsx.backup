import { DialogHeader } from "@/components/ui/dialog";
import { Form, FormControl, FormField, FormItem, FormLabel } from "@/components/ui/form";
import { Input } from "@/components/ui/input";
import PersonWalking from "@/icons/person-walking";
import { Button } from "@/components/ui/button";
import React, {  } from "react";
import TimeZoneSelector from "@/components/ux/TimeZoneSelector";
import CreateTicketList from "./components/CreateTicketList";
import UseCreateTour, { CreateTourSchema } from "./hooks/UseCreateTour";

import { useRouter } from "next/navigation";
import SetTourLocation from "./components/SetTourLocation";
import CancelDialogButton from "@/components/ux/CancelDialogButton";
import { Separator } from "@/components/ui/separator";
import ThumbnailInput from "@/components/ux/ThumbnailInput";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import RichTextInput from "@/components/ux/RichTextInput"
import AccordionInput from "@/components/ux/AccordionInput";
import { escape_key } from "@/lib/functions";
import WithPaymentsEnabled from "@/app/(site)/m/_components/Banking/_components/WithPaymentsEnabled";

type BLProps = {
    merchantId: string
}

const useBL = (props: BLProps) => {
    const router = useRouter();
    
    const { form, mutation, values} = UseCreateTour(props.merchantId)
    
    return {
        form, 
        values,
        submit: async (values: CreateTourSchema) => {
            await mutation.mutateAsync(values)
            escape_key()
            router.push(`/m/${props.merchantId}/events-and-tours?listingId=${values.id}`)
        }
    }
}

type Props = BLProps & {

}

const CreateTour : React.FC<Props> = (props) => {
    const bl = useBL(props);
    
    return (   
        <>
            <Form {...bl.form}>
                <form onSubmit={bl.form.handleSubmit(bl.submit)} className="flex flex-col">
                    <DialogHeader className="flex flex-row items-center space-x-2 p-2">
                        <div className="flex-none w-[45px] h-[45px] flex items-center justify-center rounded-xl bg-red-200">
                            <PersonWalking fillVariant="accent" height={30} />
                        </div>
                        <span>Tour name:</span>
                        <FormField
                        name="name"
                        control={bl.form.control}
                        render={({ field }) => (
                            <FormItem className="flex-grow mx-2">
                                <FormControl>
                                    <Input {...field} placeholder="Enter name" />
                                </FormControl>
                            </FormItem>
                        )} />
                    </DialogHeader>
                    <div className="flex flex-row space-x-6 p-2">
                        <div className="flex flex-col space-y-6">
                            <FormField  
                                control={bl.form.control}
                                name="thumbnail"
                                render={({ field }) => (
                                    <FormControl>
                                        <ThumbnailInput 
                                            relativePath={`merchant/${props.merchantId}/tour/${bl.values.id}`}
                                            {...field} />
                                    </FormControl>
                                )} />
                            <Tabs className="mt-2 flex-grow" defaultValue="description">
                                <TabsList>
                                    <TabsTrigger value="description">Description</TabsTrigger>
                                    <TabsTrigger value="terms">Terms</TabsTrigger>
                                    <TabsTrigger value="faq">FAQ (Optional)</TabsTrigger>
                                </TabsList>
                                <TabsContent className="h-full" value="description">
                                    <FormField
                                        name="description"
                                        render={({field}) => (
                                            <RichTextInput 
                                                {...field}
                                                maxWords={500}
                                                className="w-[300px] h-[220px]" />
                                        )} />
                                </TabsContent>
                                <TabsContent className="h-full" value="terms">
                                    <FormField
                                        name="terms"
                                        render={({field}) => (
                                            <FormItem className="flex flex-col h-full">
                                                <FormControl>
                                                <RichTextInput 
                                                    {...field}
                                                    maxWords={500}
                                                    className="w-[300px] h-[220px]" />
                                                </FormControl>
                                            </FormItem>
                                        )} />
                                </TabsContent>
                                <TabsContent className="h-full" value="faq">
                                    <FormField 
                                        name="faq" 
                                        render={({field}) => (
                                            <FormItem className="flex flex-col h-full">
                                                <FormControl>
                                                    <AccordionInput createButtonProps={{ className: "w-full", label: "Add" }} {...field} />  
                                                </FormControl>
                                            </FormItem>
                                        )} />       
                                </TabsContent>
                            </Tabs>
                        </div>
                        <div className="flex flex-col">
                            <TimeZoneSelector 
                                form={bl.form}
                                fieldNames={[
                                    { control: "country", fieldName: "country" },
                                    { control: "timezone", fieldName: "timezone" }
                                ]}  />
                            <div className="flex flex-row items-center space-x-2 w-full">
                                <FormLabel className="mt-2"> Location </FormLabel>
                                <FormField
                                    name="activityList"
                                    control={bl.form.control}
                                    render={({ field }) => (
                                        <FormItem className="flex-grow">
                                            <FormControl>
                                                <SetTourLocation
                                                    {...field}
                                                    />
                                            </FormControl>
                                        </FormItem>
                                )} />
                            </div>
                            <Separator className="mt-3" />
                            <FormField
                            name="ticketList"
                            render={({ field }) => {
                                return (
                                    <FormItem>
                                        <FormControl>
                                            <CreateTicketList 
                                                {...field}
                                                currency="AUD"
                                                className="my-2" />
                                        </FormControl>
                                    </FormItem>
                                )
                            }} />
                        </div>
                    </div>
                    <div className="flex flex-row items-center space-x-2 mt-auto">
                        <CancelDialogButton />
                        <Button type="submit" className="w-full">Next - Schedule dates & capacity</Button>
                    </div>
                </form>
            </Form>
        </>
    )
}

export default WithPaymentsEnabled(CreateTour);